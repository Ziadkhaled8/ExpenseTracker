@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}




<div class="login-form">
    <div class="text">
        LOGIN
    </div>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="field">
            <div class="fas fa-envelope"></div>
            <input asp-for="Input.Email" type="text" placeholder="Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="field">
            <div class="fas fa-lock"></div>
            <input asp-for="Input.Password" type="password" placeholder="Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <button id="login-submit" type="submit">Log in</button>
        </div>
        <div class="link">
            Not a member?
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color:#65da41">Signup now</a>
        </div>
    </form>
</div>










