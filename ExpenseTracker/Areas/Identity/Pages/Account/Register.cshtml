@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-form">
    <div class="text">
        REGISTER
    </div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="field">
            <div class="fas fa-envelope"></div>
            <input asp-for="Input.UserName" type="text" placeholder="UserName">
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="field">
            <div class="fas fa-envelope"></div>
            <input asp-for="Input.Email" type="text" placeholder="Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="field">
            <div class="fas fa-lock"></div>
            <input asp-for="Input.Password" type="password" placeholder="Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="field">
            <div class="fas fa-lock"></div>
            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        <div class="link">
            Already a member?
            <a asp-page="./login" style="color:#65da41">Login now</a>
        </div>
    </form>
</div>